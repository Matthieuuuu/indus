
<%= form_for(@site) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :daily_price %>
  <%= f.text_field :daily_price %>

  <%= f.label :zip_code %>
  <%= f.text_field :zip_code %>

  <%= f.label :description %>
  <%= f.text_area :description, cols: 40, rows: 20 %>

  <%= f.submit %>
<% end %>